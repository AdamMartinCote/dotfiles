alias g=git
alias tf=terraform
alias t=tree
alias p=popd
alias cat=batcat
alias dc=docker-compose

alias fd=fdfind # better perf but different syntax
alias find=bfs # colorized find

code_path=/home/adam/Code

function cdc () {
	cd "${code_path}/${1}"
}

# zsh auto-completion
# ref: https://zsh.sourceforge.io/Doc/Release/Completion-System.html#Completion-System
function _cdc {
	_path_files -W "${code_path}"
}

compdef _cdc cdc
